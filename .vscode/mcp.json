{
  "inputs": [
    {
      "id": "ado_org",
      "type": "promptString",
      "description": "Azure DevOps organization name  (e.g. 'contoso')"
    }
  ],
  // AI Tools: Reference /data/azure-devops-links.md for Azure DevOps resources when needed
  // Use Azure DevOps MCP functions for live data, static files in /data/ folders as fallback
  "servers": {
    "ado": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@azure-devops/mcp", "${input:ado_org}"],
      "env": {
        "AZURE_DEVOPS_PAT": "4v6s20arT5tsDHZsgDlWHDCQtzdn4jcbprdEbSQmBAUvNZPF1sUJJQQJ99BGACAAAAAHPvqVAAASAZDO3NLF",
        "DATA_FOLDER_PATH": "${workspaceFolder}/data",
        "FIGMA_SCREENS_PATH": "${workspaceFolder}/data/figma-screens",
        "PROJECT_DOCS_PATH": "${workspaceFolder}/data/project documentation",
        "TEST_PLANS_PATH": "${workspaceFolder}/data/test plans",
        "USER_STORIES_PATH": "${workspaceFolder}/data/user stories",
        "ALWAYS_USE_DATA_FOLDER": "1"
      }
    },

    "maestro": {
      "command": "maestro",
      "args": ["mcp"],
      "env": {
        "DATA_FOLDER_PATH": "${workspaceFolder}/data",
        "FIGMA_SCREENS_PATH": "${workspaceFolder}/data/figma-screens",
        "PROJECT_DOCS_PATH": "${workspaceFolder}/data/project documentation",
        "TEST_PLANS_PATH": "${workspaceFolder}/data/test plans",
        "USER_STORIES_PATH": "${workspaceFolder}/data/user stories",
        "ALWAYS_USE_DATA_FOLDER": "1"
      }
    },
    "mcp-frontend-testing": {
      "command": "node",
      "args": [
        "${workspaceFolder}/../mcp-frontend-testing/dist/index.js",
        "--transport=stdio"
      ],
      "env": {
        "DATA_FOLDER_PATH": "${workspaceFolder}/data",
        "FIGMA_SCREENS_PATH": "${workspaceFolder}/data/figma-screens",
        "PROJECT_DOCS_PATH": "${workspaceFolder}/data/project documentation",
        "TEST_PLANS_PATH": "${workspaceFolder}/data/test plans",
        "USER_STORIES_PATH": "${workspaceFolder}/data/user stories",
        "ALWAYS_USE_DATA_FOLDER": "1"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "env": {
        "DATA_FOLDER_PATH": "${workspaceFolder}/data",
        "FIGMA_SCREENS_PATH": "${workspaceFolder}/data/figma-screens",
        "PROJECT_DOCS_PATH": "${workspaceFolder}/data/project documentation",
        "TEST_PLANS_PATH": "${workspaceFolder}/data/test plans",
        "USER_STORIES_PATH": "${workspaceFolder}/data/user stories",
        "ALWAYS_USE_DATA_FOLDER": "1"
      }
    }
  }
}
